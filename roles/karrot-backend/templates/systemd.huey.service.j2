[Unit]
Description={{ site }} | huey worker
After=network.target

[Service]
Type=simple
User={{ site }}
Group={{ site }}
WorkingDirectory=/var/www/{{ site }}/www/backend
ExecStart=/var/www/{{ site }}/www/backend/env/bin/python manage.py run_huey
Restart=always

[Install]
WantedBy=multi-user.target
