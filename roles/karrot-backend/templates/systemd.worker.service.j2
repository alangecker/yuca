# This file is managed by ansible. It belongs to {{ role_path }}.
# See https://github.com/yunity/yuca to change.
[Unit]
Description={{ site }} | django worker
After=network.target
PartOf={{ site }}-worker.target

[Service]
Type=simple
User={{ site }}
Group={{ site }}
WorkingDirectory=/var/www/{{ site }}/www
ExecStart=/var/www/{{ site }}/www/env/bin/python manage.py runworker
Restart=always
